default: &default
  adapter: mysql2
  encoding: utf8
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  username: root
  password: root
  socket: /var/run/mysqld/mysqld.sock

development:
  <<: *default
  database: ProDobro_development

test:
  <<: *default
  database: ProDobro_test
production:
  <<: *default
  database: ProDobro_production
  username: ProDobro
  password: <%= ENV['PRODOBRO_DATABASE_PASSWORD'] %>
