.container
%h2.text-center= 'Edit Comment'
.row.justify-content-left
  .col-lg-10.col-md-10
    = simple_form_for [@commentable, @comment], url: {action: 'update'} do |f|
      .form-group
        = f.input :body, label: false, input_html: {class: 'form-control', rows: 10}
      .form-group
        = f.hidden_field :user_id, :value => 1
      .actions
        = f.submit class: 'btn btn-primary'