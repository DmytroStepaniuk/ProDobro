.container
%h2.text-center= t('.edit_comment')
.row.justify-content-left
  .col-lg-10.col-md-10
    = simple_form_for [@commentable, @comment], url: {action: 'update'} do |f|
      .form-group
        = f.input :body, label: false, input_html: {class: 'form-control', rows: 10}
      .actions
        = f.submit t('.edit'), class: 'btn btn-primary'
        = link_to t('.back'), :back, class: 'btn btn-outline-secondary'
